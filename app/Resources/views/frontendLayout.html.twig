<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <title>{% block title %}LukasAutohandel.de{% endblock %}</title>
    <meta charset="utf-8">
    <meta name="google-site-verification" content="{{ google_site_verification_code }}" />
    <meta name = "format-detection" content = "telephone=no" />
    <meta name="description" content="Lukas Authohandel">
    <meta name="keywords" content="auto">
    <meta name="author" content="Grzegorz 'Uirapuru' Kaszuba <uirapuruadg@gmail.com> dende.com.pl">

    <meta name="app.revision" content="{{ revision()|trim }}">
    <meta name="app.revisionDate" content="{% if revisionDate()|date("YmdHis") != "now"|date("YmdHis") %}{{ revisionDate()|date("Y-m-d H:i:s") }}{% endif %}">

    {% block stylesheets %}
        {#<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />#}

        {#<link rel="stylesheet" type="text/css" href="{% if app.environment == 'prod' %}{{ asset('css/frontend/vendors.min.css') }}{% else %}{{ asset('css/frontend/vendors.css') }}{% endif %}"/>#}
        {#<link rel="stylesheet" type="text/css" href="{% if app.environment == 'prod' %}{{ asset('css/frontend/project.min.css') }}{% else %}{{ asset('css/frontend/project.css') }}{% endif %}"/>#}
    {% endblock %}
    
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/lahfront/css/bootstrap.css') }}" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/lahfront/css/slider.css') }}" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/lahfront/css/jqtransform.css') }}" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/lahfront/css/prettyPhoto.css') }}" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/lahfront/css/style.css') }}" />

    <link rel="shortcut icon" href="{{ asset("favicon.ico") }}" type="image/x-icon">
</head>
<body>

<div class="main">
    <!-- Header -->
    <div class="container_12">
    <span class="fright langs">
        {{ knp_menu_render('langMenu', {
            'template': '::langs_menu.html.twig',
            'currentAsLink' : true,
            'depth' : 1,
            'currentClass' : 'active',
        }) }}
    </span>
        <article class="grid_12">
            <div class="inner-block">
                <header>
                    <div class="header-block">
                        <span class="fleft"><!-- address --></span>
                    <span class="fright">
                        {{ contact_number }}
                    </span>
                    </div>

                    <a class='txtlogo' href="{{ path("main") }}">Lukas <span>Autohandel</span></a>

                    <nav>
                         {{ knp_menu_render('frontMenu', {
                            'template': '::navigation.html.twig',
                            'currentAsLink' : true,
                            'depth' : 1,
                            'currentClass' : 'current',
                        }) }}
                        <div class="clear"></div>
                    </nav>
                    <div class="clear"></div>
                </header>
            </div>
        </article>
        <div class="clear"></div>
    </div>

    <!-- Content -->
    <section id="content" class="main-content">
        <div class="container_12">
            {% block body %}{% endblock %}
        </div>
    </section>
    <!-- Footer -->
    <footer>
        <div class="container_12">
            <article class="grid_12">
                <div class="inner-block">Lukas Autohandel  &copy; {{ "now"|date("Y") }}</div>
            </article>
            <div class="clear"></div>
        </div>
    </footer>
    <!-- Footer -->
</div>

{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

    <script type="text/javascript" src="{{ asset("bundles/lahfront/js/vendor/jquery.min.js") }}"></script>
    <script type="text/javascript" src="{{ asset("bundles/lahfront/js/vendor/jquery-migrate.min.js") }}"></script>
    <script type="text/javascript" src="{{ asset("bundles/lahfront/js/vendor/bootstrap.js") }}"></script>
    <script type="text/javascript" src="{{ asset("bundles/lahfront/js/vendor/modernizr-2.5.3.min.js") }}"></script>
    <script type="text/javascript" src="{{ asset("bundles/lahfront/js/jquery.easing.1.3.js") }}"></script>
    <script type="text/javascript" src="{{ asset("bundles/lahfront/js/camera.js") }}"></script>

    <script type="text/javascript" src="{{ asset("bundles/lahfront/js/jquery.mobilemenu.js") }}"></script>
    <script type="text/javascript" src="{{ asset("bundles/lahfront/js/jquery.ui.totop.js") }}"></script>
    <script type="text/javascript" src="{{ asset("bundles/lahfront/js/jquery.prettyPhoto.js") }}"></script>

    {#<script type="text/javascript" src="{{ asset("bundles/lahfront/js/script.js") }}"></script>#}
    {#<script type="text/javascript" src="{{ asset("bundles/lahfront/js/main.js") }}"></script>#}

    {#<script src="{% if app.environment == 'prod' %}{{ asset('js/frontend/vendors.min.js') }}{% else %}{{ asset('js/frontend/vendors.js') }}{% endif %}" type="text/javascript"></script>#}
    <script src="{% if app.environment == 'prod' %}{{ asset('js/frontend/project.min.js') }}{% else %}{{ asset('js/frontend/project.js') }}{% endif %}" type="text/javascript"></script>
    {% include '::analytics.html.twig' %}

    <script>
        $(window).load(function() {
            $().UItoTop({easingType: 'easeOutQuart'});

            jQuery('#slide').camera({
                pagination: false,
                navigation: false,
                transPeriod: 2000,
                fx: 'simpleFade',
                time: 7000
            });

            $("a[rel^='prettyPhoto']").prettyPhoto();
        });
    </script>

{% endblock javascripts %}

</body>
</html>

<?xml version="1.0" encoding="UTF-8"?>

<!-- http://phpunit.de/manual/4.1/en/appendixes.configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.1/phpunit.xsd"
         backupGlobals="false"
         colors="true"
         bootstrap="bootstrap.php.cache"
         backupStaticAttributes="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
>
    <testsuites>
        <testsuite name="unit">
            <directory>../src/Dende/*/Tests/Unit/**</directory>
        </testsuite>
        <testsuite name="functional">
            <directory>../src/Dende/*/Tests/Functional/**</directory>
        </testsuite>
    </testsuites>

    <php>
        <server name="KERNEL_DIR" value="app/" />
    </php>

    <logging>
        <log type="coverage-clover" target="../build/logs/clover.xml"/>
        <log type="coverage-html" target="../build/coverage" title="Portfolio"/>
        <log type="junit" target="../build/logs/junit.xml"/>
    </logging>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../app/**</directory>
            <directory suffix=".php">../src/**</directory>
            <exclude>
                <directory suffix=".php">../app/cache/**</directory>
                <directory suffix=".php">../src/Dende/FrontBundle/DataFixtures/*</directory>
                <directory suffix=".php">../src/Dende/FrontBundle/DataFixtures/ORM/*</directory>
                <directory suffix=".php">../src/**/Entity/*</directory>
                <directory suffix=".php">../src/**/Tests/*</directory>
                <directory suffix=".php">../src/**/Features/*</directory>
                <file>../app/AppCache.php</file>
                <file>../app/AppKernel.php</file>
                <file>../app/bootstrap.php.cache</file>
                <file>../src/Dende/FrontBundle/Features/FeatureContext.php</file>
            </exclude>
        </whitelist>
    </filter>
</phpunit>

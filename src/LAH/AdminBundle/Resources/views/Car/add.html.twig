{% extends "LAHAdminBundle::layout.html.twig" %}

{% import "LAHAdminBundle::collection_theme.html.twig" as _theme %}
{% form_theme form 'LAHAdminBundle::collection_theme.html.twig' %}

{%  block body %}
    {% include "@LAHAdmin/Car/_flash.html.twig"  with {form: form}  %}

    {{ form_start(form, {
        action: url('add_car'),
        attr: {
            'id'        : 'addCar',
            'novalidate': 'novalidate',
            'data-image-prototype': _theme.image_item(form.images.vars.prototype)|e,
            'data-price-prototype': _theme.price_item(form.prices.vars.prototype)|e
        }
    }) }}

    {% include "@LAHAdmin/Car/_form.html.twig" %}

{%  endblock body %}

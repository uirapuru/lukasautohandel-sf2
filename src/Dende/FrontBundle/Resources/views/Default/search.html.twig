<div class="grid_4 bg-white">
    <div class="inner-block">
        <div class="pad-1">
            <div class="form-title">{{ 'search.form.caption_search'|trans }}<span>{{ 'search.form.caption_search_small'|trans }}</span></div>

            {{ form_start(form, {
                action: url('list'),
                method: "POST",
                attr: {
                    'id'        : 'form1',
                    'novalidate': 'novalidate',
                    'data-empty-label' : 'search.form.label.empty'|trans
                }
            }) }}

            <label>
            <span>{{ 'search.form.label.type'|trans }}</span>
            <strong class="select1">{{ form_widget(form.type, {id: "car_filters_variant"}) }}</strong>
            </label>

            <label>
            <span>{{ 'search.form.label.brand'|trans }}</span>
            <strong class="select1">{{ form_widget(form.brand, {id: "car_filters_brand"}) }}</strong>
            </label>

            <label><span>{{ 'search.form.label.model'|trans }}</span>
            <strong class="select1">{{ form_widget(form.model, {id: "car_filters_model"}) }}</strong>
            <span>
                {% for error in form.model.vars.errors %}
                    {{ error.message }}{% if not loop.index|last %}<br />{% endif %}
                {% endfor %}
            </span>
            </label>

            <a onClick="document.getElementById('form1').submit()" href="#" class="button">{{ 'search.form.label.search'|trans }}</a>

            {{ form_end(form) }}

        </div>
    </div>
</div>

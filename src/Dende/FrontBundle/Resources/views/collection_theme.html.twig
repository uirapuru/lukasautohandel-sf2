{% block collection_widget %}
    {% spaceless %}
        <div class="collection">
            {% if prototype is defined %}
                {% set attr = attr|merge({'data-prototype': block('collection_item_widget') }) %}
            {% endif %}
            <div {{ block('widget_container_attributes') }}>
                {{ form_errors(form) }}
                <ul>
                    {% for rows in form %}
                        <li>
                            {% set fieldNum = 1 %}
                            {% for row in rows %}
                                <div class="field{{ fieldNum }}">
                                    {{ dump(row.vars.data) }}

                                    {{ form_label(row) }}
                                    {{ form_widget(row, { 'attr': { 'class': 'test' }}) }}
                                </div>
                                {% set fieldNum = fieldNum + 1 %}
                            {% endfor %}
                            <a class="car_image_remove" href="#">
                                <span>{{ "car.form.remove_image_item"|trans }}</span>
                            </a>
                            <div class="clear"></div>
                        </li>
                    {% endfor %}
                </ul>
                {{ form_rest(form) }}
            </div>
            <div class="clear"></div>
            <a class="car_image_add" href="#">
                <div style="display: none;"></div>
                <span>{{ "car.form.add_image_item"|trans }}</span>
            </a>
        </div>
        <div class="clear"></div>
    {% endspaceless %}
{% endblock collection_widget %}

{% block collection_item_widget %}
    {{ _self.test(prototype) }}
{% endblock collection_item_widget %}

{% macro test(prototype) %}
    {% spaceless %}
        <li>
            {% set fieldNum = 1 %}
            {% for row in prototype %}
                <div class="field{{ fieldNum }}">
                    {{ form_widget(row, { 'attr': { 'class': 'test' }}) }}
                </div>
                {% set fieldNum = fieldNum + 1 %}
            {% endfor %}
            <a class="remove" title="Remove" href="javascript:void()">
                <span>{{ "car.form.remove_image_item"|trans }}</span>
            </a>
            <div class="clear"></div>
        </li>
    {% endspaceless %}
{% endmacro %}